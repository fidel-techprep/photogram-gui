<h1>Photo Details</h1>

<dl>
  <dt>Image</dt>
  <dd>
    <img src="<%= @the_photo.image %>" width="300">
  </dd>

  <dt>Caption</dt>
  <dd>
    <p><%= @the_photo.caption %></p>
  
  </dd>
  
  <dt>Owner</dt>
  <dd>
  <%= @the_photo.poster.username %>
  </dd>
  
  <dt>Posted</dt>
  <dd>
    <%= @the_photo.created_at %>
  </dd>

  <dt>Edit photo</dt>
  <dd>
    <form action="/update_photo/<%= @the_photo.id %>" method="post">
      <label for="image_box">Image</label>
      <input id="image_box" type="text" name="query_image" placeholder="Enter a URL for the image..." value="<%= @the_photo.image %>">

      <label for="caption_box">Caption</label>
      <textarea id="caption_box" name="query_caption" placeholder="Enter a caption for the photo..."><%= @the_photo.caption %></textarea>

      <button>Update photo</button>
    </form>
  </dd>

  <dt>Delete photo</dt>
  <dd>
    <a href="/delete_photo/<%= @the_photo.id %>">Delete this photo</a>
  </dd>
</dl>

<h2>Comments</h2>

<table>
  <tr>
    <th>
      Commenter
    </th>

    <th>
      Comment
    </th>

    <th>
      Posted
    </th>
  </tr>

  <% @the_photo.comments.each do |a_comment| %>
    <tr>
      <td>
        <%= a_comment.commenter.username %>
      </td>

      <td>
        <%= a_comment.body %>
      </td>

      <td>
        <%= a_comment.created_at %>
      </td>
    </tr>
  <% end %>
    

</table>

<h3>Add a new comment</h3>

<form action="/add_comment" method="post">
  <label for="photo_id_box">Photo ID</label>
  <input id="photo_id_box" type=text placeholder="Enter the photo ID" name="query_photo_id" value="<%= @the_photo.id %>">

  <label for="author_id_box">Author ID</label>
  <input id="author_id_box" type=text placeholder="Enter your author ID" name="query_author_id">

  <label for="comment_box">Comment</label>
  <textarea id="comment_box" type=text placeholder="Enter a comment..." name="query_comment"></textarea>

  <button>Add comment</button>
</form>
